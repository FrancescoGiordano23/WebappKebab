package com.advancia.java;

import java.util.List;

import jakarta.persistence.*;

@Entity
@Table(name="container_table")

@NamedQueries({
	@NamedQuery(name ="GetAllContainers", query = "SELECT c FROM Container c")
@NamedQuery(name="GetContainerById",query = "SELECT c FROM Container c WHERE c.container_id = ?;")
})
public class Container {
	
	@Id	
	@Column(name="container_id")
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	private int id;	
	public int getId() {
		return id;
	}
	public void setId(int value) {
		id=value;
	}
	
	@Column(name="container_name")
	private String name;	
	public String getName() {
		return name;
	}
	public void setName(String value) {
		name=value;
	}
	
	@Column(name="container_price")	
	private int price=0;
	public int getPrice() {
		return price;
	}
	public void setPrice(int value) {
		price=value;
	}

	@OneToMany(mappedBy = "container")
	private List<Kebab> kebabWithThisContainerList;
}
