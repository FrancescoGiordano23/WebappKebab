package com.advancia.Utility;

import java.util.List;

import javax.persistence.EntityManager;
import javax.persistence.EntityTransaction;

import com.advancia.DAO.KebabDAO;
import com.advancia.DAO.SecondaryIngredientDAO;
import com.advancia.Modal.SecondaryIngredient;

public class SecondaryIngredientServices {

	public static List<SecondaryIngredient> getAllSecondaryIngredients() {
		EntityManager manager = null;
		EntityTransaction transaction = null;
		try {
			manager = JpaUtil.GetEntityManager();
			transaction = JpaUtil.GetEntityTransaction(manager);
			transaction.begin();
			return SecondaryIngredientDAO.getAllSecondaryIngredients(manager);
		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			if (transaction != null)
				transaction.commit();
			if (manager != null)
				manager.close();
		}
		return null;
	}
	
	public static SecondaryIngredient getSecondaryIngredientById(int selectedSecondaryId) {
		EntityManager manager = null;
		EntityTransaction transaction = null;
		try {
			manager = JpaUtil.GetEntityManager();
			transaction = JpaUtil.GetEntityTransaction(manager);
			transaction.begin();
			SecondaryIngredientDAO.getSecondaryIngredientById(manager, selectedSecondaryId);
		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			if (transaction != null)
				transaction.commit();
			if (manager != null)
				manager.close();
		}
		return null;
	}
}
