			Query query = entityManager.createQuery(hql);
			query.setString("item_desc", desc);
			List<Item2> returnList = query.list();
			return returnList.get(0);

		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			if (entityManager != null) {
				entityManager.close();
