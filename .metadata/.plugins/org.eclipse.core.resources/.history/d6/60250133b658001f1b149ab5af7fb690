package com.advancia.DAO;

import java.util.List;

import javax.persistence.EntityManager;
import javax.persistence.Query;

import com.advancia.Modal.SauceIngredient;
import com.advancia.Modal.SecondaryIngredient;

public class SauceIngredientDAO {

	public static List<SauceIngredient> getAllSauceIngredients(EntityManager manager) {

		List<SauceIngredient> listToReturn = null;

		Query query = manager.createNamedQuery("GetAllSauceIngredients", SauceIngredient.class);
		listToReturn = query.getResultList();

		return listToReturn;
	}

	public static SauceIngredient getSauceIngredientById(EntityManager manager, int selectedSauceId) {

		SauceIngredient sauceToReturn = null;

		Query query = manager.createNamedQuery("GetSauceIngredientById", SauceIngredient.class);
		query.setParameter("id", selectedSauceId);
		sauceToReturn = (SauceIngredient) query.getSingleResult();

		return sauceToReturn;

	}

	public static void deleteAllSauceIngredients(EntityManager manager) {
		Query query = manager.createNamedQuery("GetAllSauceIngredients", SecondaryIngredient.class);
		for (SauceIngredient s : (List<SauceIngredient>) query.getResultList())
			manager.remove(s);
	}

	public static void deleteSauceIngredientById(EntityManager manager, int selectedSecondaryId) {
		SecondaryIngredient secondaryToReturn = null;
		secondaryToReturn = getSecondaryIngredientById(manager, selectedSecondaryId);
		manager.remove(secondaryToReturn);

	}

	public static void createNewSauceIngredient(EntityManager manager, SecondaryIngredient newSecondaryIngredient) {
		manager.persist(newSecondaryIngredient);
	}

}
