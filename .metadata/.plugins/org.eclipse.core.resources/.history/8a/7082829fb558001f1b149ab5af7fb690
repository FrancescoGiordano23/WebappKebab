package com.advancia.Rest;

import java.util.List;

import javax.websocket.server.PathParam;
import javax.ws.rs.DELETE;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.PUT;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;


import com.advancia.Modal.SecondaryIngredient;
import com.advancia.Utility.SecondaryIngredientServices;

@Path("/ingredients/secondary")
public class SecondaryIngredientRest {

	@GET
	@Produces({ MediaType.APPLICATION_JSON, MediaType.APPLICATION_XML })
	public List<SecondaryIngredient> getAllSecondaryIngredients() {
		return SecondaryIngredientServices.getAllSecondaryIngredients()
	}

	@GET
	@Path("/{id}")
	@Produces({ MediaType.APPLICATION_JSON, MediaType.APPLICATION_XML })
	public SecondaryIngredient getSecondaryIngredientById(@PathParam("id") int selectedSecondaryId) {

		return SecondaryIngredientServices.getSecondaryIngredientById(selectedSecondaryId);
	}

	@DELETE
	@Path("/{id}")
	@Produces({ MediaType.APPLICATION_JSON, MediaType.APPLICATION_XML })
	public void deleteAllSecondaryIngredient() {
		SecondaryIngredientServices.deleteAllSecondaryIngredient();
	}
	
	@DELETE
	@Path("/{id}")
	@Produces({ MediaType.APPLICATION_JSON, MediaType.APPLICATION_XML })
	public void deleteSecondaryIngredientById(@PathParam("id") int selectedSecondaryId) {
		SecondaryIngredientServices.deleteSecondaryIngredientById(selectedSecondaryId);
	}

	@PUT
	@Path("/{id}/{name}/{price}")
	@Produces({ MediaType.APPLICATION_JSON, MediaType.APPLICATION_XML })
	public void updateSecondaryIngredientById(@PathParam("id") int selectedSecondaryId, @PathParam("name") String newName,
			@PathParam("price") int newPrice) {
		SecondaryIngredientServices.updateSecondaryIngredientById(selectedSecondaryId, newName, newPrice);
	}

	@POST
	@Path("/{name}/{price}")
	@Produces({ MediaType.APPLICATION_JSON, MediaType.APPLICATION_XML })
	public void createSecondaryIngredient(@PathParam("name") String name, @PathParam("price") int price) {
		SecondaryIngredientServices.createPrimaryIngredient(name, price);
	}

}

